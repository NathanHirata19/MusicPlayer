<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:background="#C9DFDF"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.academy.app.musicplayer.MainActivity">
<TextView
    android:id="@+id/view1"
    android:textColor="#000000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:text="\u2623 Music Player \u2623  "
    android:textSize="55sp" />

<ImageView
    android:id="@+id/image1"
    android:src="@drawable/pablo"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:layout_below="@+id/view1"
    android:layout_centerHorizontal="true"
    android:text="View 2"
    android:textSize="35sp" />

<TextView
    android:id="@+id/songT"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/image1"
    android:textColor="#000000"
    android:layout_centerHorizontal="true"
    android:textSize="36sp" />


<TextView
        android:id="@+id/songA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:layout_below="@+id/songT"
        android:textSize="22sp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    <TextView
        android:id="@+id/cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:layout_above="@+id/forward"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/cs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/cm"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/fm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:layout_above="@+id/rewind"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/fs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/fm"
        android:textSize="22sp"/>


    <Button
        android:textColor="#000000"
    android:onClick="pauseButton"
    android:textSize="20sp"
    android:text="| |"
    android:id="@+id/button1"
        android:layout_centerVertical="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />

<Button
    android:onClick="playButton"
    android:textSize="22sp"
    android:id="@+id/button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/button1"
    android:layout_alignTop="@id/button1"
    android:text="\u25BA"
    android:textColor="#000000"
    />

    <Button
        android:onClick="forward"
        android:textSize="22sp"
        android:id="@+id/forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button2"
        android:layout_alignTop="@id/button1"
        android:text="&gt; &gt;"
        android:textColor="#000000"
        />

    <Button
        android:onClick="stopButton"
        android:textSize="22sp"
        android:id="@+id/stopb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/forward"
        android:layout_alignTop="@id/button1"
        android:text="Stop"
        android:textColor="#000000"
        />

    <Button
        android:onClick="rewind"
        android:textSize="22sp"
        android:id="@+id/rewind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/stopb"
        android:layout_alignTop="@id/button1"
        android:text="&lt;&lt;"
        android:textColor="#000000"
        />

    <SeekBar
        android:layout_above="@id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mySongBar"
        />
    </RelativeLayout>
</RelativeLayout>